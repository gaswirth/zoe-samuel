@require "_global.styl"
@require "_fonts.styl"
@require "_helpers.styl"
@require "_galleries.styl"
@require "_overrides.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	min-height 100%
	text-shadow 0 0 1px transparent
	width 100%
	font-size 16px
	margin 0


body
	@extends html
	background url(../img/bg.png) repeat
	font-family "PT Serif", monospace

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important


a:link
a:visited
	text-decoration none


a:link
	color $rust


a:visited
	color $dark-rust


a:hover
a:active
a:focus
	text-decoration underline


hr
	width 80%
	height .1875rem
	background black
	margin 2em auto


.invisible
	width 0
	height 0
	visibility hidden


#page
	position relative


#masthead
	width 100%
	height auto
	position relative
	box-shadow 0 4px 15px 2px #000
	background #181105
	z-index 999

	.main-home-link
		width 62.5rem
		max-width 100%
		height 100%
		display block
		margin 0 auto


#site-title
	text-align center
	margin 0


#site-navigation-container
	width 100%
	background $post-it
	text-align center
	position relative
	-sunrise()
	margin-bottom 1em


#site-navigation
	list-style none
	padding-left 0
	-wrapper()

	li
		margin 0
		font-size 1.4em
		background-size 100% 100%
		z-index 400
		overflow-y hidden
		text-align center

		a
			text-decoration none

		a:link
		a:visited
			color inherit;

		a:hover
		a:active
		a:focus
			color inherit;

		.sub-menu
			display none

			li
				font-size 1em

				&:before
					content: "- "


#main
	-wrapper(0, 2em)
	padding 0 0 2em 0
	box-sizing border-box


#primary
#secondary
	width 100%
	margin 0 auto
	position relative
	box-sizing border-box


.entry-date
	margin-bottom 1em


#colophon
	width 100%

	#footer-content
		width 100%
		box-sizing border-box
		padding 1em 1em 1em
		background white
		box-shadow 0px 0px 19px 2px rgba(0, 0, 0, 0.5)

	a
		text-decoration none

	.site-info
		margin 0
		padding 1em 0
		text-align center
		line-height 1.7
		font-size 0.9em

		a
			color inherit

	#rhd-logo-footer
		width 1.1em
		height 1.1em
		margin 0 0.05em
		position relative
		bottom -0.1em


/* ==========================================================================
	Posts & Pages
   ========================================================================== */

.type-post
	margin 1em auto
	padding-bottom 1em
	border-bottom 2px solid $dark-rust

	&:last-child
		border-bottom none


.entry-title
.page-title
.widget-title
	-sunrise()
	text-transform uppercase


.page-title
	font-size 2.7em
	text-align center
	line-height 1
	margin 0.25em auto 0.5em auto


.entry-title
	font-size 1.7em
	line-height


.entry-content
	width 100%

	p
		line-height 1.5
		margin 1em auto

		&:first-child
			margin-top 0

		&:last-child
			margin-bottom 0

	h4
		font-size 1.8em
		margin 0.25em auto

	iframe
		height auto
		max-width 66%
		margin 1em auto !important
		display block

		&[src*="youtube"]
			min-height 25em

	img
		max-width 100%
		margin 1em auto
		display block


.child-page-links
	width 75%
	margin 1rem auto 0.5rem auto
	font-size 2.3em
	list-style none
	padding-left 0
	-flexbox()
	-sunrise()
	text-transform uppercase


.commentlist
	list-style none



/* ==========================================================================
	Widget Areas & Sidebars
   ========================================================================== */

.widget-title-link
	color inherit !important
	text-decoration none !important


.widget-title-text
	color inherit


#footer-widget-area
	@extends .clearfix
	margin-bottom 2em

	.widget_rhd_mailchimp_widget
		width 92%
		margin 0 auto
		position relative

		.widget-title
			font-size 2.9em
			line-height 1
			margin 1rem 0 0.5rem 0

		.rhd_mc_text
			width 70%
			float none
			margin 0 auto
			text-align center

		.rhd_mc_subscribe
			width 70%
			float none
			margin 1em auto 0 auto

			input
				width 100%
				display block
				border-radius 0

			.rhd_mc_email
				font-family "Cutive Mono", sans-serif
				border 1px solid black
				margin-bottom 1em

			.rhd_mc_submit
				margin 0.5em auto
				font-size 1.2em
				color white
				background $rust
				-sunrise()
				text-transform uppercase

				&:active
					background $dark-rust


/* ==========================================================================
	Projects
   ========================================================================== */

.project-thumbnail
	img
		margin 1em auto
		display block


.widget_rhd_projects_list
	.widget-title
		font-size 1.8em
		text-align center

	.project-list
		.projects
			list-style none
			padding-left 0
			text-align center
			line-height 1.75
			font-size 1.3em
			-sunrise()